@{
    ViewData["Title"] = "Login Page";
}
@{
    Layout="_Layout";
}
<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header bg-primary text-white text-center">
                <h4>Giriş Yap</h4>
            </div>
            <div class="card-body">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.Error
                    </div>
                }

                <form method="post" asp-action="Index" asp-controller="Login">
                    <div class="mb-3">
                        <label for="username" class="form-label">Kullanıcı Adı</label>
                        <input type="text" name="username" id="username" class="form-control" placeholder="Kullanıcı adı..." />
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Şifre</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Şifre..." />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Giriş</button>
                </form>
            </div>
        </div>
    </div>
</div>
